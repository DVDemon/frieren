# ============================================
# Frieren Project - Environment Variables
# ============================================
# Copy this file to .env and update values
# cp .env.example .env


# ============================================
# Google Sheet Configuration
# ============================================

GOOGLE_SHEET_ID=xxxxxxxx

# ============================================
# Telegram Bot Configuration
# ============================================
BOT_TOKEN=xxxxxxxxxxx

# ============================================
# PostgreSQL Database Configuration
# ============================================
POSTGRES_USER=frieren
POSTGRES_PASSWORD=frieren
POSTGRES_DB=frieren_db

# Backend Database Connection (uses same values as PostgreSQL)
DB_USER=frieren
DB_PASSWORD=frieren
DB_HOST=frieren_db
DB_PORT=5432
DB_NAME=frieren_db

# ============================================
# N8N Configuration
# ============================================
# N8N User Credentials (for Basic Auth and first user creation)
N8N_USER=xxxxx
N8N_PASSWORD=xxxx
N8N_FIRST_NAME=xxxxx
N8N_LAST_NAME=xxxx

# N8N Database Configuration (uses same PostgreSQL instance)
N8N_DATABASE_HOST=frieren_db
N8N_DATABASE_PORT=5432
N8N_DATABASE_NAME=n8n
N8N_DATABASE_USER=frieren
N8N_DATABASE_PASSWORD=frieren
N8N_DATABASE_SCHEMA=n8n_schema

# ============================================
# RabbitMQ Configuration
# ============================================
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# ============================================
# Frontend Configuration
# ============================================
BACKEND_URL=http://frieren-backend:8000
NODE_ENV=production
